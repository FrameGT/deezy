<% form_for(entry) do |f| %>
  <%= f.error_messages %>
  <div id="entry_fields">
    <p>
      <%= f.label :scope %><br /><%= select_scope %>
    </p>
    <p>
      <%= f.label :mac, 'MAC'%><br />
      <%= f.text_field :mac %>
    </p>
    <p>
      <%= f.label :ip, 'IP' %><br />
      <%= f.text_field :ip %>
    </p>
    <p>
      <%= f.label :itgid, 'ITG ID' %><br />
      <%= f.text_field :itgid %>
    </p>
    <p>
      <%= f.label :hostname, 'hostname' %><br />
      <%= f.text_field :hostname %>
    </p>
    <p>
      <%= f.label :uid, 'UID' %><br />
      <%= f.text_field :uid %>
    </p>
    <p>
      <span class="toggle_button">
        <%= f.label :enabled %>
        <%= f.check_box :enabled, :checked => entry.new_record? ? true : entry.enabled %>
      </span>
    </p>
    <p>
      <%= f.label :notes %><br />
      <%= f.text_area :notes, :rows => 4 %>
    </p>
    <p>
      <button type="submit" class="save" id="entry_submit"><p><%= image_tag 'button_save.png' %> Save</p></button>
    </p>
  </div>
<% end %>
