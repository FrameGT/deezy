<table class=alt_rows id=show>
    <tr><th>Scope<td><%= @entry.scope %>
    <tr><th>MAC<td><%= @entry.mac %>
    <tr><th>IP<td><%= @entry.ip %>
    <tr><th>ITG ID<td><%= @entry.itgid %>
    <tr><th>Room<td><%= @entry.room %>
    <tr><th>hostname<td><%= @entry.hostname %>
    <tr><th>UID<td><%= @entry.uid %>
    <tr><th>enabled<td>
        <% if @entry.enabled %>
          <%= image_tag 'on.png', :style => 'vertical-align:middle' %> On
        <% else %>
          <%= image_tag 'off.png', :style => 'vertical-align:middle' %> Off
        <% end %>
    <tr><th>Notes<td class=note_expanded><%= @entry.notes %>
    <tr><th>Created<td><%= @entry.created_at %>
    <tr><th>Updated<td><%= @entry.updated_at %>
</table>

<% form_tag entry_path(@entry), :method => :delete do -%>    
  <div id=show_buttons>
  <button onclick='location.href="<%= edit_entry_path(@entry) %>"; return false;' class=edit><p><%= image_tag 'button_edit.png' %> Edit</p></button>
  <button onclick='return confirm("Really delete? Be sure! This cannot be undone!")' type=submit class=delete><p><%= image_tag 'button_delete.png' %> Delete</p></button>
</div>
<% end -%>

